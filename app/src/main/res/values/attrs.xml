<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="menu" format="reference" />
    <attr name="backgroundColor" format="color" />
    <attr name="iconSize" format="dimension" />
    <attr name="sideMargins" format="dimension" />

    <declare-styleable name="PagerIndexIndicator">
        <attr name="activeColor" format="color" />
        <attr name="horizontalMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="strokeMargin" format="dimension" />

        <attr name="cornerRadius" format="dimension" />

        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BottomNav">
        <attr name="menu" />
        <attr name="backgroundColor" />
        <attr name="sideMargins" />
        <attr name="itemPadding" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="itemFontFamily" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="iconSize" />
        <attr name="iconMargin" format="dimension" />
        <attr name="iconTint" format="color"/>
        <attr name="iconTintActive" format="color"/>
        <attr name="activeItem" format="integer" />
        <attr name="duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="PopupMenu">
        <attr name="menu" />

        <attr name="backgroundColor" />
        <attr name="foregroundColor" format="color" />

        <attr name="iconSize" />
        <attr name="sideMargins" />
        <attr name="iconInBetweenMargin" format="dimension" />
        <attr name="marginVertical" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AuthBackgroundInk">
        <attr name="color1" format="color" />
        <attr name="color2" format="color" />
    </declare-styleable>

    <declare-styleable name="StoryProgressView">
        <attr name="colorActive" format="color" />
        <attr name="colorInactive" format="color" />
    </declare-styleable>

    <attr name="PagerIndexIndicator" format="reference" />
    <attr name="RoundedImageView" format="reference" />
    <attr name="BottomNavStyle" format="reference" />
    <attr name="PopupMenu" format="reference" />
    <attr name="AuthBackgroundInk" format="reference" />
    <attr name="StoriesProgressView" format="reference" />
</resources>