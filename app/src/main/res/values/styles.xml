<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/primary_text</item>
        <item name="popupMenuStyle">@style/DefaultPopupMenuStyle</item>
    </style>

    <style name="DefaultNumberPickerStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DefaultPopupMenuStyle" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded</item>
    </style>
</resources>